# ===============================================
# GitGrade Configuration
# ===============================================

# Backend Server
PORT=5000
NODE_ENV=development

# ===============================================
# External APIs (Required)
# ===============================================

# GitHub API (Get token from: https://github.com/settings/tokens)
# Required scopes: public_repo
# Free tier: 5000 requests/hour with token
GITHUB_TOKEN=your_github_personal_access_token_here

# Google Gemini API (FREE - Get from: https://makersuite.google.com/app/apikey)
# Free tier: 15 requests/min, 1500 requests/day
GEMINI_API_KEY=your_gemini_api_key_here

# ===============================================
# Database (PostgreSQL)
# ===============================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=gitgrade
DB_USER=gitgrade_user
DB_PASSWORD=gitgrade_secure_password_2024

# ===============================================
# Cache (Redis)
# ===============================================

REDIS_HOST=localhost
REDIS_PORT=6379

# ===============================================
# Analysis Configuration
# ===============================================

# Maximum number of files to analyze per repository
MAX_FILES=1000

# Maximum file size in bytes (1MB default)
MAX_FILE_SIZE=1048576

# Analysis timeout in milliseconds (3 minutes)
ANALYSIS_TIMEOUT=180000

# Maximum number of commits to fetch
MAX_COMMITS=500

# ===============================================
# Rate Limiting (IP-based, without API key)
# ===============================================

# Time window in milliseconds (1 hour)
RATE_LIMIT_WINDOW=3600000

# Maximum requests per window (10 analyses/hour)
RATE_LIMIT_MAX_REQUESTS=10

# ===============================================
# API Key Rate Limits (Per-user with API key)
# ===============================================

# Default daily limit for FREE API keys
API_KEY_DAILY_LIMIT=50

# Default monthly limit for FREE API keys
API_KEY_MONTHLY_LIMIT=1000

# ===============================================
# Frontend Configuration
# ===============================================

FRONTEND_URL=http://localhost:3000

# ===============================================
# Logging
# ===============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ===============================================
# Docker Configuration
# ===============================================

# When using docker-compose, these will be overridden:
# - DB_HOST=postgres
# - REDIS_HOST=redis
